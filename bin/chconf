#!/bin/sh

die() {
    echo "$1"
    exit $2
}

offerquit() {
    read -n 1 -p "$1? [Y/n]: " ans
    echo ""
    case "$ans" in
        n|N)
            echo "Exiting"
            exit 0
            ;;
        *)
            :
            ;;
    esac
}

[ -z "$1" ] && die "Must specify a pathspec to modify" 1

if [ ! -f "$1" ]; then
    echo "Didn't find '$1'"
    offerquit "Create it"
    touch "$1"
fi
pspec="$1"

cd "$HOME/repo/linux-conf"

vim "$pspec"

offerquit "Install changes"
./install.sh

offerquit "Commit changes"
git commit --interactive

offerquit "Push changes"
git push

